<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<br.com.pontomobi.livelopontos.ui.widget.LastUpdate-->
            <!--android:id="@+id/my_info_last_update"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/black_alpha_32000000" />

            <TextView
                style="@style/LiveloPontosTheme.TextView.Product.Detail.Title"
                android:gravity="center"
                android:text="@string/product_detail_subtitle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/black_alpha_32000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/order_border"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/black_alpha_32000000" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1">

                    <TableRow
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/LiveloPontosTheme.TextView.Rescue.Fields.Order"
                                android:text="@string/rescue_number_order" />

                            <TextView
                                android:id="@+id/tv_order_number"
                                style="@style/LiveloPontosTheme.TextView.Rescue.Fields.Bold"
                                android:layout_weight="0.9"
                                tools:text="ABC 123.456.789.000" />

                            <TextView
                                android:id="@+id/tv_order_date"
                                style="@style/LiveloPontosTheme.TextView.Rescue.Fields.Bold"
                                android:layout_weight="0.1"
                                tools:text="27/07/2015" />
                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/LiveloPontosTheme.TextView.Rescue.Fields.Order"
                                android:text="@string/rescue_receiver" />

                            <TextView
                                android:id="@+id/tv_order_receiver"
                                style="@style/LiveloPontosTheme.TextView.Rescue.Fields.Bold"
                                android:layout_weight="0.9"
                                tools:text="Roberto Zimmerman" />
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:background="@color/gray_f8f8f8"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/LiveloPontosTheme.TextView.Rescue.Fields.Order"
                                android:text="@string/rescue_total" />

                            <TextView
                                android:id="@+id/tv_order_total"
                                style="@style/LiveloPontosTheme.TextView.Rescue.Fields.Bold"
                                android:layout_weight="0.9"
                                tools:text="1.999pts + R$ 100,00" />

                            <TextView
                                android:id="@+id/tv_status"
                                style="@style/LiveloPontosTheme.TextView.Rescue.Status"
                                android:text="Pedido em processamento" />

                        </LinearLayout>
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/black_alpha_32000000" />
                </TableLayout>
            </LinearLayout>


            <TextView
                style="@style/LiveloPontosTheme.TextView.Product.Detail.Title"
                android:gravity="center"
                android:text="@string/product_detail_title_info_geral" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="@dimen/last_update_label_margin_left">

                <TextView
                    style="@style/LiveloPontosTheme.TextView.Rescue.Fields.Blue"
                    android:text="@string/rescue_address" />

                <TextView
                    android:id="@+id/tv_order_address"
                    style="@style/LiveloPontosTheme.TextView.Rescue.Fields.Bold"
                    android:ellipsize="end"
                    android:maxLines="3"
                    tools:text="Roberto Zimmerman, Rua Francisco Matarazzo, 1.234 / 123, Cerqueira César,  São Paulo - SP  CEP: 55666-777" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/black_alpha_32000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="@dimen/last_update_label_margin_left">

                <TextView
                    style="@style/LiveloPontosTheme.TextView.Rescue.Fields.Blue"
                    android:text="@string/rescue_payment" />

                <TextView
                    android:id="@+id/tv_order_payment"
                    style="@style/LiveloPontosTheme.TextView.Rescue.Fields.Bold"
                    android:ellipsize="end"
                    android:maxLines="3"
                    tools:text="Cartão MasterCard \nxxxx.xxxx.xxxx.1234 \n1x de R$ 100,00" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/black_alpha_32000000" />

            <TextView
                style="@style/LiveloPontosTheme.TextView.Product.Detail.Title"
                android:gravity="center"
                android:text="@string/product_detail_title_info_order" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/black_alpha_32000000" />

            <!--<include layout="@layout/item_product_detail" />-->

            <LinearLayout
                android:id="@+id/container_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_f5f5f5"
                android:orientation="horizontal"
                android:padding="@dimen/last_update_label_margin_left">

                <TextView
                    style="@style/LiveloPontosTheme.TextView.Rescue.Fields.Blue"
                    android:text="@string/product_detail_total_order"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/total_order_description"
                    style="@style/LiveloPontosTheme.TextView.Rescue.Fields.Pink.Bold500"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    android:text="1.999 PTS"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>