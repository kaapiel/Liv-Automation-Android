<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">

    <com.rey.material.widget.EditText
        android:id="@+id/component_password_pass"
        style="@style/LivautomationTheme.EditText.ChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senha*"
        app:et_dividerHeight="1dp"
        app:et_inputId="@+id/component_password_pass_input" />

    <ImageView
        android:id="@+id/component_password_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:padding="7dp"
        android:src="@drawable/selector_show_pass" />
</FrameLayout>
