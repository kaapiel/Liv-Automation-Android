<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_empty_cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/search_empty_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/carrinho_vazio" />

    <TextView
        android:id="@+id/search_empty_title"
        style="@style/LivautomationTheme.TextView.Token.Title.Blue"
        android:layout_above="@+id/search_empty_description"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="@string/cart_title_empty" />

    <TextView
        android:id="@+id/search_empty_description"
        style="@style/LivautomationTheme.TextView.Token.Description.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cart_go_catalog"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textSize="18sp"
        android:text="@string/cart_title_description" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/cart_go_catalog"
        style="@style/LivautomationTheme.Button.Enabled"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:text="@string/search_empty_catalog" />

</RelativeLayout>