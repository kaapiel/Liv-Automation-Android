<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/extract_top_minimized"
    android:layout_width="match_parent"
    android:layout_height="@dimen/extract_top_minimized_content_height"
    android:background="@color/extract_top_minimized_bg"
    android:visibility="invisible">

    <LinearLayout
        android:id="@+id/extract_top_minimized_content_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/extract_top_minimized_points"
            style="@style/LivautomationTheme.TextView.Extract.Top.Minimized.Points"
            android:text="0" />

        <TextView
            style="@style/LivautomationTheme.TextView.Extract.Top.Minimized.Pts"
            android:text="PTS" />

    </LinearLayout>

    <TextView
        android:id="@+id/extract_top_minimized_month"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        style="@style/LivautomationTheme.TextView.Extract.Top.Minimized.Month" />

</RelativeLayout>