<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Ambiente"
        android:gravity="center"
        android:textColor="#F10090"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_amb" />

    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/LivautomationTheme.Spinner"
        android:id="@+id/spinner_ambiente"
        android:textAlignment="center"
        android:layout_below="@+id/tv_amb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Maquina"
        android:gravity="center"
        android:textColor="#F10090"
        android:id="@+id/tv_maq"
        android:layout_below="@+id/spinner_ambiente"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/LivautomationTheme.Spinner"
        android:id="@+id/spinner_maquina"
        android:textAlignment="center"
        android:layout_below="@+id/tv_maq"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <android.support.v7.widget.AppCompatButton
        android:id="@+id/botaoExecutarTestes"
        style="@style/LivautomationTheme.Button.Login.Join"
        android:text="PLAY"
        android:background="#FF401090"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="84dp" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Sprint"
        android:gravity="center"
        android:textColor="#F10090"
        android:id="@+id/tv_spt"
        android:layout_below="@+id/spinner_maquina"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/LivautomationTheme.Spinner"
        android:id="@+id/spinner_sprint"
        android:textAlignment="center"
        android:layout_below="@+id/tv_spt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>