<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        style="@style/LivautomationTheme.TextView.Token.Description.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/cart_coupon_discount"
        android:textSize="14sp"/>

    <com.rey.material.widget.EditText
        android:id="@+id/cart_coupon"
        style="@style/LivautomationTheme.EditText.ForgotPassword.Cpf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="@string/cart_coupon_hint"
        android:maxLength="20"
        android:inputType="text"
        android:textCursorDrawable="@drawable/cursor_color_pink"
        app:et_dividerHeight="1dp"
        app:et_inputId="@+id/cart_coupon_hint"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/cart_add_coupon"
        style="@style/LivautomationTheme.Button.Login.Activate.Account"
        android:text="@string/cart_add"
        android:textColor="@color/gray_888888"/>

    <RelativeLayout
        android:id="@+id/container_subtotal"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="26dp"
        android:background="@color/blue_53529a" >

        <TextView
            style="@style/LivautomationTheme.TextView.Title.White"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:text="@string/cart_subtotal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:orientation="vertical"
            android:minWidth="100dp"
            android:gravity="right">

            <TextView
                android:id="@+id/cart_subtotal_points"
                style="@style/LivautomationTheme.TextView.Title.White"
                android:textSize="26sp"
                tools:text="1.580"/>

            <TextView
                style="@style/LivautomationTheme.TextView.Summary.Item.Pts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="0dp"
                android:textSize="12sp"
                android:text="@string/cart_points" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_light_blue"/>

    <RelativeLayout
        android:id="@+id/container_discount"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/blue_53529a" >

        <TextView
            style="@style/LivautomationTheme.TextView.Title.White"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:text="@string/cart_discount"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:orientation="vertical"
            android:minWidth="100dp"
            android:gravity="right">

            <TextView
                android:id="@+id/cart_discount_points"
                style="@style/LivautomationTheme.TextView.Title.White"
                android:textSize="26sp"
                tools:text="3.001"/>

            <TextView
                style="@style/LivautomationTheme.TextView.Summary.Item.Pts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="0dp"
                android:textSize="12sp"
                android:text="@string/cart_points" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_light_blue"/>

    <RelativeLayout
        android:id="@+id/container_total"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/blue_53529a" >

        <TextView
            style="@style/LivautomationTheme.TextView.Title.White"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:textSize="17sp"
            android:text="@string/cart_total"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:orientation="vertical"
            android:minWidth="100dp"
            android:gravity="right">

            <TextView
                android:id="@+id/cart_total_points"
                style="@style/LivautomationTheme.TextView.Title.White"
                android:textSize="26sp"
                tools:text="1.580"/>

            <TextView
                style="@style/LivautomationTheme.TextView.Summary.Item.Pts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="0dp"
                android:textSize="12sp"
                android:text="@string/cart_points" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_light_blue"/>

    <RelativeLayout
        android:id="@+id/container_points_remaining"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/blue_53529a">

        <TextView
            style="@style/LivautomationTheme.TextView.Title.White"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:textSize="17sp"
            android:text="@string/cart_points_remaining"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:orientation="vertical"
            android:minWidth="100dp"
            android:gravity="right">

            <TextView
                android:id="@+id/cart_points_remaining"
                style="@style/LivautomationTheme.TextView.Title.White"
                android:textSize="26sp"
                tools:text="3.001"/>

            <TextView
                style="@style/LivautomationTheme.TextView.Summary.Item.Pts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="0dp"
                android:textSize="12sp"
                android:text="@string/cart_points" />

        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/checkout_send_order"
        style="@style/LivautomationTheme.Button.Enabled"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:text="@string/cart_complete"/>

    <LinearLayout
        android:id="@+id/banner_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/my_account_banner"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            style="@style/LivautomationTheme.TextView.MyInfo.Banner"
            android:text="@string/cart_credit_description"
            android:padding="15dp"/>

    </LinearLayout>

</LinearLayout>