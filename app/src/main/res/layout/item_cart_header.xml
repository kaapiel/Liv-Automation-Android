<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/checkout_background"
              android:orientation="vertical"
              android:padding="20dp">

    <TextView
        android:id="@+id/amount_points"
        style="@style/LiveloPontosTheme.TextView.MuseoSans.Blue"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="@string/cart_update_points"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/update_time"
        style="@style/LiveloPontosTheme.TextView.Token.Description.Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/cart_update_time"
        android:textSize="14sp"/>

</LinearLayout>