<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_account_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/my_account_contet_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/my_account_item_margin_bottom"
        android:layout_marginTop="@dimen/my_account_item_margin_top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/my_account_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/my_account_icon_margin_left" />

        <TextView
            android:id="@+id/my_account_title"
            style="@style/LivautomationTheme.TextView.MyAccount.Title" />

    </LinearLayout>

    <com.rey.material.widget.Switch
        android:visibility="gone"
        android:id="@+id/switch_fingerprint"
        style="@style/LivautomationTheme.Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="22dp"
        android:checked="false" />

    <View
        android:layout_below="@+id/my_account_contet_detail"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_divider_color" />

</RelativeLayout>