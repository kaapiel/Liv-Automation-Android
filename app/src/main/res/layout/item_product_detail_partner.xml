<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="RtlHardcoded">

    <CheckBox
        android:id="@+id/partner_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/product_partner_check_margin_top_bottom"
        android:layout_marginLeft="@dimen/product_partner_check_margin_left"
        android:layout_marginRight="@dimen/product_partner_check_margin_right"
        android:layout_marginTop="@dimen/product_partner_check_margin_top_bottom"
        android:background="@drawable/partner_checkbox_selector"
        android:button="@android:color/transparent"
        android:focusable="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/partner_name"
            style="@style/LivautomationTheme.TextView.ProductDetail.Partner.Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/partner_available"
            style="@style/LivautomationTheme.TextView.ProductDetail.Partner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_unavailable"
            android:textColor="@color/products_partner_unavailable_text"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_value"
                style="@style/LivautomationTheme.TextView.ProductDetail.Partner.Values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_value" />

            <TextView
                android:id="@+id/product_single_price"
                style="@style/LivautomationTheme.TextView.ProductDetail.Partner.Values.Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_single_price" />

            <TextView
                android:id="@+id/product_list_price"
                style="@style/LivautomationTheme.TextView.ProductDetail.Partner.Values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_list_price" />

            <TextView
                android:id="@+id/product_sales_price"
                style="@style/LivautomationTheme.TextView.ProductDetail.Partner.Values.Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_sales_price" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>