<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name_partner"
        style="@style/LivautomationTheme.TextView.Rescue.Fields.Pink.Bold500"
        android:padding="20dp"
        android:textSize="20sp"
        tools:text="Extra" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/black_alpha_32000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/item_product_order_detail_description_container">
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/black_alpha_32000000" />

</LinearLayout>