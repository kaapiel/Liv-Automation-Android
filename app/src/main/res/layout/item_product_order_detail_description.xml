<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:id="@+id/item_product_order_detail_description_container_view"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/product_border"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@color/black_alpha_32000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/order_product_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/last_update_label_margin_left">

            <TextView
                style="@style/LiveloPontosTheme.TextView.Rescue.Fields.Blue"
                android:text="@string/product_detail_name_product" />

            <TextView
                android:id="@+id/tv_name_product"
                style="@style/LiveloPontosTheme.TextView.Rescue.Fields.Bold"
                android:text="Furadeira Black&amp;Decker Imp.3/8 Tm500" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/black_alpha_32000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:padding="@dimen/last_update_label_margin_left">

            <TextView
                style="@style/LiveloPontosTheme.TextView.Rescue.Fields.Blue"
                android:text="@string/rescue_status" />

            <TextView
                android:id="@+id/tv_status"
                style="@style/LiveloPontosTheme.TextView.Rescue.Status"
                android:layout_marginLeft="10dp"
                android:text="Pedido em processamento" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/gray_f5f5f5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="@dimen/last_update_label_margin_left">

                <TextView
                    style="@style/LiveloPontosTheme.TextView.Rescue.Fields.Blue"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="@string/product_detail_amount" />

                <TextView
                    android:id="@+id/product_qty"
                    style="@style/LiveloPontosTheme.TextView.Rescue.Fields.Bold"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="1" />

            </LinearLayout>

            <View
                android:layout_width="0.3dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@color/black_alpha_32000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="@dimen/last_update_label_margin_left">

                <TextView
                    style="@style/LiveloPontosTheme.TextView.Rescue.Fields.Blue"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="@string/product_detail_value" />

                <TextView
                    android:id="@+id/tv_value_points"
                    style="@style/LiveloPontosTheme.TextView.Rescue.Fields.Bold"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="1.999 PTS" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/black_alpha_32000000" />

    </LinearLayout>

</LinearLayout>