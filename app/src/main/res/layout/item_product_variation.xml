<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/variation_name"
        style="@style/LivautomationTheme.TextView.ProductDetail.Subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.rey.material.widget.Spinner
        android:id="@+id/variation_values"
        style="@style/Material.Widget.Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/product_name_margin_left_right"
        android:layout_marginRight="@dimen/product_name_margin_left_right"
        app:rd_style="@style/Material.Drawable.Ripple.Wave"
        app:spn_arrowColor="@color/product_variant_arrow_color"
        app:spn_dividerHeight="0dp"
        app:spn_arrowPadding="@dimen/product_variation_arrow_padding"
        app:spn_arrowSize="@dimen/product_variation_arrow_size"/>

    <include
        layout="@layout/product_detail_session_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/product_description_session_divider_height"/>

</LinearLayout>