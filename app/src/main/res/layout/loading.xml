<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loading_background_color"
    android:clickable="true"
    android:visibility="gone">

    <br.com.aguido.livautomation.ui.widget.LiveloLoading
        android:id="@+id/loading_progress"
        android:layout_width="@dimen/loading_progress_size"
        android:layout_height="@dimen/loading_progress_size"
        android:layout_centerInParent="true"
        android:layout_gravity="center" />

    <TextView
        style="@style/LiveloPontosTheme.TextView.Loading"
        android:layout_below="@+id/loading_progress"
        android:id="@+id/loading_progress_text"
        android:text="@string/loading_text" />

</RelativeLayout>