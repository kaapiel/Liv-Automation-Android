<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/menu_header_logo_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/menu_header_logo_margin_top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu_header_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_menu" />

    </LinearLayout>

    <TextView
        android:id="@+id/menu_header_helow"
        style="@style/LivautomationTheme.TextView.Menu.Header.Greet"
        android:layout_below="@+id/menu_header_logo_container"
        tools:text="@string/menu_header_greet" />

    <TextView
        android:id="@+id/menu_header_name_user"
        style="@style/LivautomationTheme.TextView.Menu.Header.Name"
        android:layout_below="@+id/menu_header_helow"
        tools:text="Roberto Zimmerman" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/menu_header_name_user"
        android:layout_marginTop="18dp"
        android:background="@color/home_menu_divider_color" />

</RelativeLayout>