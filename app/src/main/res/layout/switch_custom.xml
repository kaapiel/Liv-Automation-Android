<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/switch_custom_text"
        android:layout_centerVertical="true"
        style="@style/LivautomationTheme.TextView.Switch.Description"
        android:text="@string/register_switch_push" />

    <com.rey.material.widget.Switch
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/switch_custom_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        style="@style/LivautomationTheme.Switch" />

</RelativeLayout>