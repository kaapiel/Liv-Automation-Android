<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/go_to_app_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/bt_smartphone" />

    <android.support.wearable.view.WearableHeaderTextView
        android:id="@+id/validation_code_title"
        style="@style/LiveloWearTheme.TextView.Go.To.App.Text"
        android:text="@string/go_to_app_description" />


</LinearLayout>