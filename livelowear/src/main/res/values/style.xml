<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LiveloWearTheme.TextView" parent="android:TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>
    </style>

    <!-- Generic Erro Styles -->
    <style name="LiveloWearTheme.TextView.Generic.Erro.Title" parent="LiveloWearTheme.TextView">
        <item name="android:textSize">@dimen/generic_error_title</item>
        <item name="android:textColor">@color/generic_error_title</item>
        <item name="android:layout_marginTop">@dimen/generic_erro_title_margin_top</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="LiveloWearTheme.TextView.Generic.Erro.Desc" parent="LiveloWearTheme.TextView">
        <item name="android:textSize">@dimen/generic_error_desc</item>
        <item name="android:textColor">@color/generic_error_desc</item>
        <item name="android:layout_marginTop">@dimen/generic_erro_desc_margin_top</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/generic_erro_desc_margin_left</item>
        <item name="android:layout_marginRight">@dimen/generic_erro_desc_margin_right</item>
        <item name="fontPath">fonts/RobotoCondensed-Light.ttf</item>
    </style>

    <style name="LiveloWearTheme.TextView.Generic.Erro.Text.Button" parent="LiveloWearTheme.TextView">
        <item name="android:textSize">@dimen/generic_error_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="fontPath">fonts/RobotoCondensed-Light.ttf</item>
    </style>

    <!-- Current Balance -->
    <style name="LiveloWearTheme.TextView.Current.Balance.Title" parent="LiveloWearTheme.TextView">
        <item name="android:textSize">@dimen/current_balance_title_text_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/current_balance_title_margin_top</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LiveloWearTheme.TextView.Current.Balance.Points" parent="LiveloWearTheme.TextView">
        <item name="android:textSize">@dimen/current_balance_points_text_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/current_balance_points_margin_top</item>
        <item name="android:textColor">@color/current_balance_points_text_color</item>
    </style>

    <!-- Validation Code -->
    <style name="LiveloWearTheme.TextView.Validation.Code.Title" parent="LiveloWearTheme.TextView">
        <item name="android:textSize">@dimen/validation_code_title_text_size</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/validation_code_title_margin_top</item>
        <item name="android:textColor">@color/validation_code_title_text_color</item>
    </style>

    <style name="LiveloWearTheme.TextView.Validation.Code.Code" parent="LiveloWearTheme.TextView">
        <item name="android:textSize">@dimen/validation_code_code_text_size</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/validation_code_title_margin_top</item>
        <item name="android:textColor">@color/validation_code_code_text_color</item>
    </style>

    <style name="LiveloWearTheme.TextView.Validation.Code.Renew" parent="LiveloWearTheme.TextView">
        <item name="android:textSize">@dimen/validation_code_renew_text_size</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Last Update -->
    <style name="LiveloWearTheme.TextView.Last.Update" parent="LiveloWearTheme.TextView">
        <item name="android:textSize">@dimen/last_update_text_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/last_update_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/last_update_margin_left</item>
        <item name="android:layout_marginRight">@dimen/last_update_margin_right</item>
        <item name="android:textColor">@color/last_update_text_color</item>
    </style>

    <!-- Go To App -->
    <style name="LiveloWearTheme.TextView.Go.To.App.Text" parent="LiveloWearTheme.TextView">
        <item name="android:textSize">@dimen/go_to_app_text_size</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/go_to_app_text_margin_top</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontPath">fonts/RobotoCondensed-Light.ttf</item>
    </style>

    <!-- My Points Accumulated -->
    <style name="LiveloWearTheme.TextView.My.Points.Accumulated.Title" parent="LiveloWearTheme.TextView">
        <item name="android:textSize">@dimen/my_points_accumulated_title_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/my_points_accumulated_title_margin_top</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LiveloWearTheme.TextView.My.Points.Accumulated.Subtitle" parent="LiveloWearTheme.TextView">
        <item name="android:textSize">@dimen/my_points_accumulated_subtitle_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LiveloWearTheme.TextView.My.Points.Accumulated.Points" parent="LiveloWearTheme.TextView.Current.Balance.Points" />

    <!-- Graphic Points -->
    <style name="LiveloWearTheme.TextView.Graphic.Points.Title" parent="LiveloWearTheme.TextView">
        <item name="android:textSize">@dimen/graphic_points_title_text_size</item>
        <item name="android:layout_marginTop">@dimen/graphic_points_title_margin_top</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LiveloWearTheme.TextView.Graphic.Points.Subtitle" parent="LiveloWearTheme.TextView">
        <item name="android:textSize">@dimen/graphic_points_subtitle_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="LiveloWearTheme.TextView.Graphic.Points.Empty" parent="LiveloWearTheme.TextView">
        <item name="android:textSize">@dimen/graphic_points_empty_state_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/graphic_points_empty_state</item>
        <item name="android:layout_marginTop">@dimen/graphic_points_empty_sate_margin_top</item>
    </style>

    <!-- Graphic Item -->
    <style name="LiveloWearTheme.TextView.Graphic.Points.Item.Month" parent="LiveloWearTheme.TextView">
        <item name="android:textSize">@dimen/graphic_item_month_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LiveloWearTheme.TextView.Graphic.Points.Item.Amount" parent="LiveloWearTheme.TextView">
        <item name="android:textSize">@dimen/graphic_item_amonth_text_size</item>
        <item name="android:layout_marginLeft">@dimen/graphic_item_month_margin_left</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontPath">fonts/RobotoCondensed-Light.ttf</item>
    </style>

</resources>